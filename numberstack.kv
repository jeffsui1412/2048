<Box>:
    background_color: 1, 1, 1, 1

    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size

    text: str(self.value) if self.value else ""
    font_size: "80dp"
    color: 0, 0, 0, 1


GameSpace:
    padding: 10
    spacing: 5
    rows: 4
    cols: 4
    width: self.height
    size_hint_x: None
